<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#160203"
    tools:context=".SettingsScreen">

    <ImageView
        android:id="@+id/settingBackground"
        android:layout_width="331dp"
        android:layout_height="218dp"
        android:background="@drawable/setting_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48000002" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/settingBackground"
        app:layout_constraintEnd_toStartOf="@+id/toggleSound"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="@+id/settingBackground"
        app:layout_constraintTop_toTopOf="@+id/settingBackground"
        app:layout_constraintVertical_bias="0.43"
        app:srcCompat="@drawable/volume" />

    <ImageButton
        android:id="@+id/backButtonSettings"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:background="@drawable/back"
        android:onClick="backToMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <SeekBar
        android:id="@+id/toggleSound"
        android:layout_width="157dp"
        android:layout_height="50dp"
        android:progressTint="#ff7900"
        app:layout_constraintBottom_toBottomOf="@+id/settingBackground"
        app:layout_constraintEnd_toEndOf="@+id/settingBackground"
        app:layout_constraintHorizontal_bias="0.678"
        app:layout_constraintStart_toStartOf="@+id/settingBackground"
        app:layout_constraintTop_toTopOf="@+id/settingBackground"
        app:layout_constraintVertical_bias="0.43" />

    <ImageButton
        android:id="@+id/onButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/on"
        android:onClick="VolumeOn"
        app:layout_constraintEnd_toStartOf="@+id/offButton"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="@+id/settingBackground"
        app:layout_constraintTop_toTopOf="@+id/settingBackground" />

    <ImageButton
        android:id="@+id/offButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/off"
        android:onClick="VolumeOff"
        app:layout_constraintBottom_toBottomOf="@+id/settingBackground"
        app:layout_constraintEnd_toEndOf="@+id/settingBackground"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="@+id/settingBackground"
        app:layout_constraintTop_toTopOf="@+id/settingBackground"
        app:layout_constraintVertical_bias="0.898" />
</androidx.constraintlayout.widget.ConstraintLayout>